#!/usr/bin/env libui
#####
#
# test_C_Confirm_Action-q
#
#####

test_C_Confirm_Action-q () {
  local t="${TERMINAL}"
  TERMINAL=true
  LibuiPerformTest 'Action -q "Confirm question?" "ls -d /tmp" <<< "yes"'
  local tv=${?}
  TERMINAL="${t}"
  LibuiValidateTest "${tv}" 0 '(Confirm) Confirm question? (y/n) [yes] /tmp'
  return ${?}
}

# test setup
_Test_opt+='-X C '

return 0
